<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.example.org/light-sensor" 
   xmlns="http://www.example.org/light-sensor" elementFormDefault="qualified">
   <xs:element name="lightSensorData">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="dailyMesurement" type="mesurementType"
					minOccurs="0" maxOccurs="unbounded" />
				<xs:element name="model">
					<xs:complexType>
						<xs:attribute name="name" type="xs:string" />
					</xs:complexType>
				</xs:element>
				<xs:element name="user-ID" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="mesurementType">
		<xs:sequence>
			<xs:element name="date">
			   <xs:complexType>
					<xs:sequence>
						<xs:element name="year" type="xs:integer" />
						<xs:element name="month" type="xs:integer" />
						<xs:element name="day" type="xs:integer" />
			    </xs:sequence>
				</xs:complexType>
			</xs:element> 
			<xs:element name="measurement" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="time-stump" type="xs:time" />
						<xs:element name="brightness">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="dark" />
									<xs:enumeration value="dim" />
									<xs:enumeration value="bright" />
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>